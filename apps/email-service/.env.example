# Database
DATABASE_URL=postgres://matrummet_authenticator:password@localhost:5432/matrummet
DB_SCHEMA=public
DB_ROLE=matrummet_authenticator
DB_NOTIFICATION_CHANNEL=email_queue_channel

# SMTP Configuration
# For local development with Inbucket (docker compose up inbucket):
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
# SMTP_USER and SMTP_PASS not needed for Inbucket
SMTP_FROM=noreply@matrummet.local

# For production, use your actual SMTP provider:
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-smtp-user
# SMTP_PASS=your-smtp-password
# SMTP_FROM=noreply@yourdomain.com

# Application
APP_BASE_URL=http://localhost:3000
PORT=4004

# Email Rate Limiting
EMAIL_RATE_LIMIT=100  # Maximum emails per hour
EMAIL_BATCH_SIZE=10   # Number of emails to process in each batch
