# PostgREST API URL
POSTGREST_URL=http://localhost:4444

# JWT Secret for Next.js auth cookies (minimum 32 characters for HS256)
JWT_SECRET=your-secret-key-min-256-bits-long-for-hs256

# PostgREST JWT Secret (must match postgrest.cfg jwt-secret)
POSTGREST_JWT_SECRET=recept-jwt-secret-change-in-production-min-32-chars

# Gemini API Key for recipe parsing (optional)
GEMINI_API_KEY=

# Recipe Import API (optional) - for programmatic recipe import
# Generate a secure random key, e.g.: openssl rand -hex 32
RECIPE_IMPORT_API_KEY=
# Email of the user who will own imported recipes
RECIPE_IMPORT_EMAIL=
