# PostgREST API URL
POSTGREST_URL=http://localhost:4444

# JWT Secret for Next.js auth cookies (minimum 32 characters for HS256)
JWT_SECRET=your-secret-key-min-256-bits-long-for-hs256

# PostgREST JWT Secret (must match postgrest.cfg jwt-secret)
POSTGREST_JWT_SECRET=matrummet-jwt-secret-change-in-production-min-32-chars

# Base URL of the application
APP_URL=http://localhost:3000

# Public URL for OpenGraph/sharing links (optional)
NEXT_PUBLIC_URL=http://localhost:3000

# Mistral API Key for AI features (optional)
MISTRAL_API_KEY=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_SECRET=

# Stripe payment processing (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Cron job authentication (optional)
CRON_SECRET=

# File storage directory (optional, defaults to public/uploads)
# DATA_FILES_DIR=/path/to/persistent/storage
