{
  "name": "@matrummet/testing",
  "version": "1.0.0",
  "description": "Shared testing utilities and configuration for matrummet",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./vitest/node": {
      "import": "./dist/vitest/node.js",
      "types": "./dist/vitest/node.d.ts"
    },
    "./vitest/jsdom": {
      "import": "./dist/vitest/jsdom.js",
      "types": "./dist/vitest/jsdom.d.ts"
    },
    "./setup/node": {
      "import": "./dist/setup/node.js",
      "types": "./dist/setup/node.d.ts"
    },
    "./setup/jsdom": {
      "import": "./dist/setup/jsdom.js",
      "types": "./dist/setup/jsdom.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.9.1"
  },
  "devDependencies": {
    "@matrummet/eslint": "workspace:*",
    "@matrummet/tsconfig": "workspace:*",
    "@types/node": "^22.19.11",
    "eslint": "^9.39.3",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "vitest": "^4.0.0"
  }
}
